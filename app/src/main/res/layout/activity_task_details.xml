<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.meiyiyou.simpletodo.TaskDetailsActivity">

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Task Name"
        android:textSize="20sp"
        android:id="@+id/txtTaskName"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:background="@android:color/transparent"
        android:id="@+id/editTaskDetailsbtn"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/txtDueDate"
        android:layout_toEndOf="@+id/txtDueDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTaskNameShow"
        android:textSize="25dp"
        android:layout_alignTop="@+id/txtTaskName"
        android:layout_alignBottom="@+id/txtTaskName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/txtTaskName"
        android:layout_toEndOf="@+id/txtTaskName" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Due Date"
        android:textSize="20sp"
        android:id="@+id/txtDueDate"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/txtTaskName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDueDateShow"
        android:textSize="25dp"
        android:layout_alignTop="@+id/txtDueDate"
        android:layout_alignRight="@+id/txtTaskNameShow"
        android:layout_alignEnd="@+id/txtTaskNameShow"
        android:layout_alignBottom="@+id/txtDueDate"
        android:layout_toRightOf="@+id/txtDueDate"
        android:layout_toEndOf="@+id/txtDueDate" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Task Priority"
        android:textSize="20sp"
        android:id="@+id/txtTaskPriority"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/txtDueDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPriorityShow"
        android:textSize="25dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignTop="@+id/txtTaskPriority"
        android:layout_alignRight="@+id/txtTaskNameShow"
        android:layout_alignEnd="@+id/txtTaskNameShow"
        android:layout_alignBottom="@+id/txtTaskPriority"
        android:layout_toRightOf="@+id/txtTaskPriority"
        android:layout_toEndOf="@+id/txtTaskPriority" />

</RelativeLayout>
